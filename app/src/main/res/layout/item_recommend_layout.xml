<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/kecheng_card"
    android:padding="@dimen/dp_10"
    >
    <ImageView
        android:id="@+id/iv_class_img"
        android:layout_width="150dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@mipmap/class_pic"
        />
    <TextView
        android:id="@+id/tv_class_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintLeft_toRightOf="@+id/iv_class_img"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_class_img"
        />
    <TextView
        android:id="@+id/tv_class_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_class_name"
        app:layout_constraintLeft_toLeftOf="@id/tv_class_name"
        android:layout_marginTop="@dimen/dp_10"
        />
    <TextView
        android:id="@+id/tv_class_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_class_author"
        app:layout_constraintLeft_toLeftOf="@+id/tv_class_author"
        app:layout_constraintBottom_toBottomOf="@+id/iv_class_img"
        />
    <TextView
        android:id="@+id/tv_class_before_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/tv_class_num"
        app:layout_constraintRight_toLeftOf="@+id/tv_class_now_price"
        />
    <TextView
        android:id="@+id/tv_class_now_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_class_before_price"
        android:textColor="#FF7B4F"
        />

</android.support.constraint.ConstraintLayout>