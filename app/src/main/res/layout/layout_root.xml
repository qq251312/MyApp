<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/root_tv_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:text="二年级"
        android:textSize="6pt"
        />
    <ImageView
        android:id="@+id/root_iv_open_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/choose_class"
        app:layout_constraintLeft_toRightOf="@+id/root_tv_left"
        app:layout_constraintBottom_toBottomOf="@+id/root_tv_left"
        />
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/root_iv_open_bar"
        app:layout_constraintTop_toTopOf="@+id/root_tv_left"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="20dp"
        >
        <ImageView
            android:id="@+id/root_iv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/search"
            android:layout_alignParentLeft="true"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/root_iv_search"
            android:layout_marginLeft="10dp"
            android:hint="金光"
            android:background="@null"
            android:textSize="6pt"
            />
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/root_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/root_tv_left"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</android.support.constraint.ConstraintLayout>